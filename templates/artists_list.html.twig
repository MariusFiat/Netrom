{% extends 'base.html.twig' %}

{% block title %}Artists List{% endblock %}

{% block body %}
    {% include 'navbar.html.twig' %}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">

    <style>
        body {
            background-color: #228B22;
            margin: 0;
            padding: 0;
            font-family: Arial, sans-serif;
        }

        .artist-container {
            max-width: 1000px;
            margin: 40px auto;
            padding: 20px;
            background-color: #ffffff;
            border-radius: 12px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
            position: relative;
            padding-bottom: 80px;
        }

        .artist-container h1 {
            text-align: center;
            margin-bottom: 30px;
            font-size: 2rem;
            color: #333;
        }

        .artist-table {
            width: 100%;
            border-collapse: collapse;
        }

        .artist-table th,
        .artist-table td {
            padding: 14px 16px;
            text-align: center;
            border: 1px solid #ddd;
        }

        .artist-table thead {
            background-color: #f5f5f5;
        }

        .artist-table tr:hover {
            background-color: #f0f8ff;
        }

        /* Search bar styles */
        .search-container {
            display: flex;
            justify-content: flex-end;
            margin-bottom: 20px;
        }

        .search-form {
            display: flex;
            width: 300px;
        }

        .search-input {
            flex: 1;
            padding: 8px 12px;
            border: 1px solid #ddd;
            border-radius: 4px 0 0 4px;
            outline: none;
        }

        .search-button {
            padding: 8px 16px;
            background-color: #007bff;
            color: white;
            border: none;
            border-radius: 0 4px 4px 0;
            cursor: pointer;
        }

        .search-button:hover {
            background-color: #0069d9;
        }

        /* Pagination styles */
        .pagination {
            display: flex;
            justify-content: center;
            margin-top: 20px;
            gap: 8px;
        }

        .pagination li {
            display: inline-block;
        }

        .pagination li a,
        .pagination li span {
            display: inline-block;
            padding: 8px 16px;
            border: 1px solid #ddd;
            border-radius: 4px;
            color: #28a745;
            text-decoration: none;
            transition: all 0.3s;
        }

        .pagination li a:hover {
            background-color: #f0f0f0;
        }

        .pagination li.active span {
            background-color: #28a745;
            color: white;
            border-color: #28a745;
        }

        .pagination li.disabled span {
            color: #aaa;
            pointer-events: none;
        }

        /* Add artist button */
        .add-artist-btn {
            position: absolute;
            right: 30px;
            bottom: 30px;
            background-color: #28a745;
            color: white;
            border: none;
            border-radius: 50%;
            width: 60px;
            height: 60px;
            font-size: 24px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
            display: flex;
            align-items: center;
            justify-content: center;
            cursor: pointer;
            transition: all 0.3s;
        }

        .add-artist-btn:hover {
            background-color: #218838;
            transform: scale(1.05);
        }

        /* Button styles from festival template */
        .btn-delete {
            background-color: #dc3545;
            color: white;
            border: none;
            padding: 6px 12px;
            border-radius: 4px;
            cursor: pointer;
            transition: background-color 0.3s;
            display: inline-flex;
            align-items: center;
            gap: 4px;
        }

        .btn-delete:hover {
            background-color: #c82333;
        }

        .btn-edit {
            background-color: #ffc107;
            color: #212529;
            border: none;
            padding: 6px 12px;
            border-radius: 4px;
            cursor: pointer;
            transition: background-color 0.3s;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            gap: 4px;
        }

        .btn-edit:hover {
            background-color: #e0a800;
            color: #212529;
            text-decoration: none;
        }

        .d-flex.gap-2 {
            gap: 8px;
        }
    </style>

    <div class="artist-container">
        <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 20px;">
            <h1>Artists List</h1>
            <div class="search-container">
                <form method="get" action="{{ path('artist_list') }}" class="search-form">
                    <input type="text"
                           name="q"
                           class="search-input"
                           placeholder="Search artists..."
                           value="{{ searchTerm }}"
                           aria-label="Search artists">
                    <button type="submit" class="search-button">
                        <i class="bi bi-search"></i>
                    </button>
                </form>
            </div>
        </div>

        <table class="artist-table">
            <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Music Genre</th>
{#                <th>Editions</th>#}
                {% if is_granted('ROLE_ADMIN') or is_granted('ROLE_EDITOR') %}
                    <th>Actions</th>
                {% endif %}
            </tr>
            </thead>
            <tbody>
            {% for artist in artists %}
                <tr>
                    <td>{{ artist.id }}</td>
                    <td>{{ artist.name }}</td>
                    <td>{{ artist.musicGenre }}</td>
{#                    <td>#}
{#                        {% if artist.editions is not empty %}#}
{#                            {{ artist.editions|length }}#}
{#                        {% else %}#}
{#                            0#}
{#                        {% endif %}#}
{#                    </td>#}
                    {% if is_granted('ROLE_ADMIN') or is_granted('ROLE_EDITOR') %}
                        <td>
                            <div class="d-flex gap-2 justify-content-center">
                                <a href="{{ path('artist_edit', {'id': artist.id}) }}" class="btn-edit">
                                    <i class="bi bi-pencil"></i> Edit
                                </a>
                                <form action="{{ path('artist_delete', {'id': artist.id}) }}" method="post" class="d-inline">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete_artist' ~ artist.id) }}">
                                    <button type="submit" class="btn-delete" onclick="return confirm('Are you sure you want to delete this artist?')">
                                        <i class="bi bi-trash"></i> Delete
                                    </button>
                                </form>
                            </div>
                        </td>
                    {% endif %}
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <div class="navigation">
            {{ knp_pagination_render(artists) }}
        </div>

        {% if is_granted('ROLE_ADMIN') or is_granted('ROLE_EDITOR') %}
            <a href="{{ path('artist_add') }}" class="add-artist-btn" title="Add New Artist">
                <i class="bi bi-plus"></i>
            </a>
        {% endif %}
    </div>
{% endblock %}
