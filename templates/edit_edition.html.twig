{% extends 'base.html.twig' %}

{% block title %}Edit Edition - {{ festival.name }}{% endblock %}

{% block body %}
    {% include 'navbar.html.twig' %}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">

    <style>
        body {
            background-color: #228B22;
            margin: 0;
            padding: 0;
            font-family: Arial, sans-serif;
        }

        .edition-container {
            max-width: 900px;
            margin: 40px auto;
            padding: 30px;
            background-color: #ffffff;
            border-radius: 12px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
        }

        .form-group {
            margin-bottom: 1.5rem;
        }

        .form-control {
            border-radius: 6px;
            padding: 10px 15px;
            border: 1px solid #ced4da;
            width: 100%;
        }

        .btn-submit {
            background-color: #28a745;
            color: white;
            padding: 10px 20px;
            border: none;
            border-radius: 6px;
            cursor: pointer;
            transition: all 0.3s;
            display: inline-flex;
            align-items: center;
            gap: 8px;
        }

        .btn-submit:hover {
            background-color: #218838;
        }

        .back-link {
            display: inline-flex;
            align-items: center;
            gap: 5px;
            margin-top: 20px;
            color: #28a745;
            text-decoration: none;
        }
    </style>

    <div class="edition-container">
        <h1>Edit Edition for {{ festival.name }}</h1>

        {{ form_start(form) }}
        <div class="form-group">
            {{ form_label(form.startDate) }}
            {{ form_widget(form.startDate, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.startDate) }}
        </div>

        <div class="form-group">
            {{ form_label(form.endDate) }}
            {{ form_widget(form.endDate, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.endDate) }}
        </div>

        <div class="form-group">
            {{ form_label(form.lineup) }}
            {{ form_widget(form.lineup, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.lineup) }}
        </div>

        <button type="submit" class="btn-submit">
            <i class="bi bi-save"></i> Update Edition
        </button>
        {{ form_end(form) }}

        <a href="{{ path('festival_editions', {'id': festival.id}) }}" class="back-link">
            <i class="bi bi-arrow-left"></i> Back to Editions
        </a>
    </div>
{% endblock %}
