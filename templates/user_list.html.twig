{% extends 'base.html.twig' %}

{% block title %}Users List{% endblock %}

{% block body %}
    {% include 'navbar.html.twig' %}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css" rel="stylesheet">
    <style>
        body {
            background-color: #228B22;
            margin: 0;
            padding: 0;
            font-family: Arial, sans-serif;
        }

        .user-container {
            max-width: 1200px;
            margin: 40px auto;
            padding: 20px;
            background-color: #ffffff;
            border-radius: 12px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
        }

        .user-container h1 {
            text-align: center;
            margin-bottom: 30px;
            font-size: 2rem;
            color: #333;
        }

        .user-table {
            width: 100%;
            border-collapse: collapse;
        }

        .user-table th,
        .user-table td {
            padding: 14px 16px;
            text-align: center;
            border: 1px solid #ddd;
        }

        .user-table thead {
            background-color: #f5f5f5;
        }

        .user-table tr:hover {
            background-color: #f0f8ff;
        }

        .btn-view {
            background-color: #007bff;
            color: white;
            padding: 6px 12px;
            border-radius: 4px;
            text-decoration: none;
        }

        .btn-view:hover {
            background-color: #0069d9;
            color: white;
        }

        .navigation {
            margin-top: 20px;
            text-align: center;
        }

    /*    Delete button style */
        .btn-delete {
            background-color: #dc3545;
            color: white;
            padding: 6px 12px;
            border-radius: 4px;
            border: none;
            cursor: pointer;
            margin-left: 8px;
        }

        .btn-delete:hover {
            background-color: #c82333;
        }
    </style>

    <div class="user-container">
        <h1>Users List</h1>

        <table class="user-table">
            <thead>
            <tr>
                <th>ID</th>
                <th>Email</th>
                <th>Role</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for user in users %}
                <tr>
                    <td>{{ user.id }}</td>
                    <td>{{ user.email }}</td>
                    <td>{{ user.role }}</td>
                    <td>{{ user.userDetails.firstName ?? 'N/A' }}</td>
                    <td>{{ user.userDetails.lastName ?? 'N/A' }}</td>
                    <td>
                        <a href="{{ path('user_show', {'id': user.id}) }}" class="btn-view">
                            <i class="bi bi-eye"></i> View
                        </a>
                        <form method="post" action="{{ path('user_delete', {'id': user.id}) }}" style="display: inline-block;">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
                            <button type="submit" class="btn-delete" onclick="return confirm('Are you sure you want to delete this user?')">
                                <i class="bi bi-trash"></i> Delete
                            </button>
                        </form>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="6" class="text-center">No users found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <div class="navigation">
            {{ knp_pagination_render(users) }}
        </div>
    </div>
{% endblock %}
