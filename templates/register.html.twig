{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <div class="auth-container">
        <h1 class="auth-title">Register</h1>

        {{ form_start(registrationForm, {'attr': {'class': 'needs-validation'}}) }}
        {{ form_errors(registrationForm) }}

        <div class="row">
            <div class="col-md-6">
                <h3>Account Information</h3>
                {{ form_row(registrationForm.email, {'attr': {'class': 'form-control mb-3'}}) }}
                {{ form_row(registrationForm.plainPassword, {'attr': {'class': 'form-control mb-3'}}) }}
            </div>
            <div class="col-md-6">
                <h3>Personal Information</h3>
                {{ form_row(registrationForm.firstName, {'attr': {'class': 'form-control mb-3'}}) }}
                {{ form_row(registrationForm.lastName, {'attr': {'class': 'form-control mb-3'}}) }}
                {{ form_row(registrationForm.age, {'attr': {'class': 'form-control mb-3'}}) }}
            </div>
        </div>

        <button type="submit" class="btn btn-primary">Register</button>
        {{ form_end(registrationForm) }}
    </div>
{% endblock %}
