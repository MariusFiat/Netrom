{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    {% include 'navbar.html.twig' %}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css" rel="stylesheet">
    <style>
        body {
            background-color: #228B22;
            margin: 0;
            padding: 0;
            font-family: Arial, sans-serif;
        }

        .auth-container {
            max-width: 800px;
            margin: 60px auto;
            padding: 40px;
            background-color: #ffffff;
            border-radius: 12px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
        }

        .auth-title {
            font-size: 2.5rem;
            color: #228B22;
            margin-bottom: 30px;
            font-weight: bold;
            text-align: center;
        }

        .section-title {
            color: #228B22;
            margin: 25px 0 15px;
            font-size: 1.25rem;
            font-weight: 600;
            border-bottom: 2px solid #f0f0f0;
            padding-bottom: 8px;
        }

        .form-group {
            margin-bottom: 1.5rem;
        }

        .form-label {
            font-weight: 500;
            color: #333;
            margin-bottom: 0.5rem;
            display: block;
        }

        .form-control {
            padding: 12px 15px;
            border-radius: 6px;
            border: 1px solid #ddd;
            width: 100%;
        }

        .form-check {
            margin-bottom: 1.5rem;
        }

        .btn-auth {
            padding: 12px 24px;
            font-weight: 500;
            width: 100%;
            border-radius: 6px;
            transition: all 0.3s ease;
            cursor: pointer;
            margin-top: 20px;
        }

        .btn-register {
            background-color: #228B22;
            border: 2px solid #228B22;
            color: white;
        }

        .btn-register:hover {
            background-color: #1c7a1c;
            border-color: #1c7a1c;
        }

        .form-errors {
            color: #dc3545;
            font-size: 0.875rem;
            margin-top: 5px;
        }

        .terms-link {
            color: #228B22;
            text-decoration: none;
            font-weight: 500;
        }

        .terms-link:hover {
            text-decoration: underline;
        }
    </style>

    <div class="auth-container">
        <h1 class="auth-title">Create Your Account</h1>

        {% for flash_error in app.flashes('error') %}
            <div class="alert alert-danger">{{ flash_error }}</div>
        {% endfor %}

        {{ form_start(registrationForm, {'attr': {'class': 'needs-validation'}}) }}

        <h3 class="section-title">Account Information</h3>
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    {{ form_label(registrationForm.email) }}
                    {{ form_widget(registrationForm.email, {'attr': {'class': 'form-control'}}) }}
                    <div class="form-errors">{{ form_errors(registrationForm.email) }}</div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    {{ form_label(registrationForm.plainPassword) }}
                    {{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'form-control'}}) }}
                    <div class="form-errors">{{ form_errors(registrationForm.plainPassword) }}</div>
                </div>
            </div>
        </div>

        <h3 class="section-title">Personal Information</h3>
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label for="first_name" class="form-label">First Name</label>
                    <input type="text" id="first_name" name="first_name" class="form-control" required>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label for="last_name" class="form-label">Last Name</label>
                    <input type="text" id="last_name" name="last_name" class="form-control" required>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label for="age" class="form-label">Age</label>
                    <input type="number" id="age" name="age" class="form-control" required min="13">
                </div>
            </div>
        </div>

        <div class="form-group form-check">
            {{ form_widget(registrationForm.agreeTerms, {'attr': {'class': 'form-check-input'}}) }}
            {{ form_label(registrationForm.agreeTerms, null, {
                'label_attr': {'class': 'form-check-label'},
            }) }}
            <div class="form-errors">{{ form_errors(registrationForm.agreeTerms) }}</div>
        </div>

        <button type="submit" class="btn-auth btn-register">
            <i class="bi bi-person-plus"></i> Register
        </button>

        <div class="text-center mt-3">
            <p>Already have an account? <a href="{{ path('app_login') }}" class="terms-link">Sign in</a></p>
        </div>

        {{ form_end(registrationForm) }}
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/js/bootstrap.bundle.min.js"></script>
{% endblock %}
