{% extends 'base.html.twig' %}

{% block title %}Home Page{% endblock %}

{% block body %}
    {% include 'navbar.html.twig' %}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css" rel="stylesheet">
    <style>
        body {
            background-color: #228B22;
            margin: 0;
            padding: 0;
            font-family: Arial, sans-serif;
        }

        /* Home Content */
        .home-container {
            max-width: 800px;
            margin: 60px auto;
            padding: 40px;
            background-color: #ffffff;
            border-radius: 12px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
            text-align: center;
        }

        .home-title {
            font-size: 3.5rem;
            color: #228B22;
            margin-bottom: 30px;
            font-weight: bold;
        }

        .home-subtitle {
            font-size: 1.5rem;
            color: #333;
            margin-bottom: 40px;
        }

        .home-links {
            display: flex;
            justify-content: center;
            gap: 20px;
            margin-top: 40px;
        }

        .home-link {
            padding: 12px 24px;
            border-radius: 6px;
            text-decoration: none;
            font-weight: 500;
            transition: all 0.3s ease;
        }

        .home-link-primary {
            background-color: #228B22;
            color: white;
            border: 2px solid #228B22;
        }

        .home-link-secondary {
            background-color: transparent;
            color: #228B22;
            border: 2px solid #228B22;
        }

        .home-link-primary:hover {
            background-color: #1c7a1c;
            border-color: #1c7a1c;
        }

        .home-link-secondary:hover {
            background-color: #f0f8ff;
        }
    </style>

    <!-- Main Content -->
    <div class="home-container">
        {# Flash messages #}
        {% for message in app.flashes('success') %}
            <div class="alert alert-success">
                {{ message }}
            </div>
        {% endfor %}
        {% for message in app.flashes('error') %}
            <div class="alert alert-danger">
                {{ message }}
            </div>
        {% endfor %}

        <h1 class="home-title">Home Page</h1>
        <p class="home-subtitle">Welcome to our Festival Management System</p>

        <div class="home-links">
            <a href="{{ path('list_festivals') }}" class="home-link home-link-primary">
                <i class="bi bi-calendar-event"></i> View Festivals
            </a>
            {% if is_granted('ROLE_ADMIN') or is_granted('ROLE_EDITOR') %}
                <a href="{{ path('user_list') }}" class="home-link home-link-secondary">
                    <i class="bi bi-people"></i> View Users
                </a>
            {% endif %}
        </div>
    </div>

    <!-- Include Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/js/bootstrap.bundle.min.js"></script>
{% endblock %}
