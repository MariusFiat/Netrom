{% extends 'base.html.twig' %}

{% block title %}Festivals List{% endblock %}

{% block body %}
    {% include 'navbar.html.twig' %}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-LN+7fdVzj6u52u30Kp6M/trliBMCMKTyK833zpbD+pXdCLuTusPj697FH4R/5mcr" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/js/bootstrap.bundle.min.js" integrity="sha384-ndDqU0Gzau9qJ1lfW4pNLlhNTkCfHzAVBReH9diLvGRem5+R9g2FzA8ZGN954O5Q" crossorigin="anonymous"></script>
    <style>
        body {
            background-color: #228B22;
            margin: 0;
            padding: 0;
            font-family: Arial, sans-serif;
        }

        .festival-container {
            max-width: 1000px;
            margin: 40px auto;
            padding: 20px;
            background-color: #ffffff;
            border-radius: 12px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
            position: relative;
            padding-bottom: 80px; /* Space for the floating button */
        }

        .festival-container h1 {
            text-align: center;
            margin-bottom: 30px;
            font-size: 2rem;
            color: #333;
        }

        .festival-table {
            width: 100%;
            border-collapse: collapse;
        }

        .festival-table th,
        .festival-table td {
            padding: 14px 16px;
            text-align: center;
            border: 1px solid #ddd;
        }

        .festival-table thead {
            background-color: #f5f5f5;
        }

        .festival-table tr:hover {
            background-color: #f0f8ff;
        }

        .festival-table a {
            color: #007bff;
            text-decoration: none;
            font-weight: 500;
        }

        .festival-table a:hover {
            text-decoration: underline;
        }

        .navigation {
            margin-top: 20px;
            text-align: center;
        }

        .btn-delete {
            background-color: #dc3545;
            color: white;
            border: none;
            padding: 6px 12px;
            border-radius: 4px;
            cursor: pointer;
            transition: background-color 0.3s;
        }

        .btn-delete:hover {
            background-color: #c82333;
        }

        .add-festival-btn {
            position: absolute;
            right: 30px;
            bottom: 30px;
            background-color: #28a745;
            color: white;
            border: none;
            border-radius: 50%;
            width: 60px;
            height: 60px;
            font-size: 24px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
            display: flex;
            align-items: center;
            justify-content: center;
            cursor: pointer;
            transition: all 0.3s;
        }

        .add-festival-btn:hover {
            background-color: #218838;
            transform: scale(1.05);
        }

        /* Search bar styles */
        .search-container {
            display: flex;
            justify-content: flex-end;
            margin-bottom: 20px;
        }

        .search-form {
            display: flex;
            width: 300px;
        }

        .search-input {
            flex: 1;
            padding: 8px 12px;
            border: 1px solid #ddd;
            border-radius: 4px 0 0 4px;
            outline: none;
        }

        .search-button {
            padding: 8px 16px;
            background-color: #007bff;
            color: white;
            border: none;
            border-radius: 0 4px 4px 0;
            cursor: pointer;
        }

        .search-button:hover {
            background-color: #0069d9;
        }

        /* Pagination styles */
        .pagination {
            display: flex;
            justify-content: center;
            margin-top: 20px;
            gap: 8px;
        }

        .pagination li {
            display: inline-block;
        }

        .pagination li a,
        .pagination li span {
            display: inline-block;
            padding: 8px 16px;
            border: 1px solid #ddd;
            border-radius: 4px;
            color: #28a745;
            text-decoration: none;
            transition: all 0.3s;
        }

        .pagination li a:hover {
            background-color: #f0f0f0;
        }

        .pagination li.active span {
            background-color: #28a745;
            color: white;
            border-color: #28a745;
        }

        .pagination li.disabled span {
            color: #aaa;
            pointer-events: none;
        }

        /* Edit button style */
        .btn-edit {
            background-color: #ffc107;
            color: #212529;
            border: none;
            padding: 6px 12px;
            border-radius: 4px;
            cursor: pointer;
            transition: background-color 0.3s;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            gap: 4px;
        }

        .btn-edit:hover {
            background-color: #e0a800;
            color: #212529;
            text-decoration: none;
        }

        .d-flex.gap-2 {
            gap: 8px;
        }
    </style>

    <div class="festival-container">
        <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 20px;">
            <h1>Festivals List</h1>
            <div class="search-container">
                <form method="get" action="{{ path('list_festivals') }}" class="search-form">
                    <input type="text"
                           name="q"
                           class="search-input"
                           placeholder="Search by name or location..."
                           value="{{ app.request.query.get('q') }}"
                           aria-label="Search festivals">
                    <button type="submit" class="search-button">
                        <i class="bi bi-search"></i>
                    </button>
                </form>
            </div>
        </div>

        <table class="festival-table">
            <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Location</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for festival in festivals %}
                <tr>
                    <td>{{ festival.id }}</td>
                    <td>
                        <a href="{{ path('festival_editions', {id: festival.id}) }}">
                            {{ festival.name }}
                        </a>
                    </td>
                    <td>{{ festival.location }}</td>
                    <td>
                        <div class="d-flex gap-2 justify-content-center">
                            <a href="{{ path('edit_festival', {id: festival.id}) }}" class="btn-edit">
                                <i class="bi bi-pencil"></i> Edit
                            </a>
                            <form action="{{ path('delete_festival', {id: festival.id}) }}" method="post" class="d-inline">
                                <input type="hidden" name="_method" value="DELETE">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete_festival' ~ festival.id) }}">
                                <button type="submit" class="btn-delete" onclick="return confirm('Are you sure you want to delete this festival?')">
                                    <i class="bi bi-trash"></i> Delete
                                </button>
                            </form>
                        </div>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="4" class="text-center">No festivals found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <div class="navigation">
            {{ knp_pagination_render(festivals) }}
        </div>

        <a href="{{ path('add_festival') }}" class="add-festival-btn" title="Add New Festival">
            <i class="bi bi-plus"></i>
        </a>
    </div>
{% endblock %}
