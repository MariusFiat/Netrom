{% extends 'base.html.twig' %}

{% block title %}Festivals List{% endblock %}

{% block body %}
    <style>
        body {
            background-color: #228B22;
            margin: 0;
            padding: 0;
            font-family: Arial, sans-serif;
        }

        .festival-container {
            max-width: 1000px;
            margin: 40px auto;
            padding: 20px;
            background-color: #ffffff;
            border-radius: 12px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
        }

        .festival-container h1 {
            text-align: center;
            margin-bottom: 30px;
            font-size: 2rem;
            color: #333;
        }

        .festival-table {
            width: 100%;
            border-collapse: collapse;
        }

        .festival-table th,
        .festival-table td {
            padding: 14px 16px;
            text-align: center;
            border: 1px solid #ddd;
        }

        .festival-table thead {
            background-color: #f5f5f5;
        }

        .festival-table tr:hover {
            background-color: #f0f8ff;
        }

        .festival-table a {
            color: #007bff;
            text-decoration: none;
            font-weight: 500;
        }

        .festival-table a:hover {
            text-decoration: underline;
        }

        .navigation {
            margin-top: 20px;
            text-align: center;
        }
    </style>

    <div class="festival-container">
        <h1>Festivals List</h1>

        <table class="festival-table">
            <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Location</th>
            </tr>
            </thead>
            <tbody>
            {% for festival in festivals %}
                <tr>
                    <td>{{ festival.id }}</td>
                    <td>
                        <a href="{{ path('festival_editions', {id: festival.id}) }}">
                            {{ festival.name }}
                        </a>
                    </td>
                    <td>{{ festival.location }}</td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3" class="text-center">No festivals found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <div class="navigation">
            {{ knp_pagination_render(festivals) }}
        </div>
    </div>
{% endblock %}
